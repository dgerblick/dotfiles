[init]
	defaultBranch = main
[core]
	editor = code --wait
[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $REMOTE $LOCAL $BASE $MERGED
[oh-my-zsh]
	hide-status = 1
	hide-dirty = 1
